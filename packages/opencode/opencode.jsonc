      "prompt": "{file:./agent/orchestrator.md}",
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for workflow coordination, multi-agent tasks, role switching guidance, and when unsure which specialist to consult"
    },
    "master": {
      "prompt": "{file:./agent/master.md}",
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
